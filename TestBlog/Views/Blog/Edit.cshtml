@model TestBlog.Models.BlogViewModels.EditViewModel

<div class="container-fluid">
    <h1 class="mt-4">Edit</h1>
    <div class="row">
        <div class="col-lg-6">
            <div class="card mb-4">
                <form id="EditBlogForm" asp-controller="Blog" asp-action="Update" enctype="multipart/form-data" method="post">
                    <input readonly hidden asp-for="Blog.Id" />
                    <div class="card-header">
                        <i class="fas fa-pen-fancy mr-1"></i> @*<i class="svg-inline--fa fa-pen-fancy" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="pen-fancy" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" data-fa-i2svg=""><path fill="currentColor" d="M79.18 282.94a32.005 32.005 0 0 0-20.24 20.24L0 480l4.69 4.69 92.89-92.89c-.66-2.56-1.57-5.03-1.57-7.8 0-17.67 14.33-32 32-32s32 14.33 32 32-14.33 32-32 32c-2.77 0-5.24-.91-7.8-1.57l-92.89 92.89L32 512l176.82-58.94a31.983 31.983 0 0 0 20.24-20.24l33.07-84.07-98.88-98.88-84.07 33.07zM369.25 28.32L186.14 227.81l97.85 97.85 199.49-183.11C568.4 67.48 443.73-55.94 369.25 28.32z"></path></i>*@
                        Here you can edit your Post
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="BlogHeaderImage"></label>
                            <div class="custom-file">
                                <input asp-for="BlogHeaderImage" class="custom-file-input" accept="image/*">
                                <label class="custom-file-label">Select an Image</label>
                            </div>
                            <span class="text-danger" asp-validation-for="BlogHeaderImage"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Blog.Title"></label>
                            <input asp-for="Blog.Title" class="form-control" required>
                            <span class="text-danger" asp-validation-for="Blog.Title"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Blog.Content"></label>
                            <textarea asp-for="Blog.Content" class="form-control textarea" rows="8"></textarea>
                            <span class="text-danger" asp-validation-for="Blog.Content"></span>
                        </div>

                    </div>
                    <div class="card-footer">
                        <div class="form-group">
                            <p class="text-muted">Publish now or save for later edits.</p>
                            <label>Publish now?</label>
                            <input type="checkbox" data-toggle="toggle" asp-for="Blog.Published">
                            <br>
                            <button class="btn btn-primary" type="submit" form="EditBlogForm">Submit</button>
                        </div>
                    </div>
                    
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{

    <script src="https://cdn.ckeditor.com/ckeditor5/21.0.0/classic/ckeditor.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
    <script>
        ClassicEditor
        .create(document.querySelector('.textarea'))
            .catch(error => {
            console.error(error);
            });
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });

    </script>
}

